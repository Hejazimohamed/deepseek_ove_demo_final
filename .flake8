[flake8]
# مجلّدات وملفّات نستثنيها كليّاً من الفحص
exclude =
    .git,
    __pycache__,
    .venv,
    zip,
    images_fpr_test,
    backups,
    tests,
    *.zip,
    *.log

# نرفع حدّ طول السطر إلى 120
max-line-length = 120

# نتجاهل هذه القواعد حتى لا تظهر أخطاء تتعلّق بالمسافات والأسطر الفارغة
ignore =
    E203   
    W503   
    E501  
    F401   
    F841   
    E302   
    E305   
    E303   
    W292   
    E226   
    E701    